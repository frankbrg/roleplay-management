<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Character"
        android:textSize="20dp"
        android:translationX="33dp"
        android:translationY="51dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/characterName"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:hint="character name"
        android:translationX="33dp"
        android:translationY="108dp" />

    <EditText
        android:id="@+id/itemWeight"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:ems="10"
        android:hint="max weight"
        android:inputType="number"
        android:translationX="33dp"
        android:translationY="206dp" />

    <Button
        android:id="@+id/deleteCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="@color/black"
        android:translationX="33dp"
        android:translationY="295dp"
        app:backgroundTint="#F84141"
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_action_delete"
        app:iconTint="#000000" />

    <Button
        android:id="@+id/editCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="#000000"
        android:translationX="241dp"
        android:translationY="295dp"
        app:backgroundTint="#69E5FC"
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_action_edit"
        app:iconTint="#000000" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>